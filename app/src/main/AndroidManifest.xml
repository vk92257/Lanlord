<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.landlord">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".LandlordApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Landlord">
        <activity
            android:name=".modules.home.HomeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".modules.choiceScreen.ChoiceScreenActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modules.forgetPassword.ForgetPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modules.login.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modules.signUp.TermsAndCondition"
            android:screenOrientation="portrait"/>
        <activity android:name=".modules.signUp.SignUp"
            android:screenOrientation="portrait"/>
        <activity android:name=".modules.intro.IntroActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".modules.MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>